# simple inputs files for the unsplit CTU hydro scheme

[driver]
max_steps = 2000
tmax = 5.0
cfl = 0.8


[LM-atmosphere]
#grav = -0.5


[io]
basename = lm_bubble_128_
n_out = 5


[mesh]
nx = 64
ny = 64
xmax = 1.0
ymax = 1.0

xlboundary = periodic
xrboundary = periodic

ylboundary = reflect
yrboundary = outflow


[bubble]
x_pert = 0.5
y_pert = 0.5
r_pert = 0.05
