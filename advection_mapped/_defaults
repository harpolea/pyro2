[driver]
cfl       = 0.8           ; advective CFL number


[advection_mapped]
u = 1.0      ; advective velocity in x-direction
v = 1.0      ; advective velocity in y-direction

limiter = 2  ; limiter (0 = none, 1 = 2nd order, 2 = 4th order)


[grid]
map_type = rectilinear
rmin = 0.5
rmax = 1
thmin = 0
thmax = 1
