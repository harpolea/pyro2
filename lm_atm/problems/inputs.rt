# simple inputs files for the unsplit CTU hydro scheme

[driver]
max_steps = 2000
tmax = 20
cfl = 0.6


[LM-atmosphere]
grav = -0.5


[io]
basename = lm_rt_
n_out = 10
dt_out = 500


[mesh]
nx = 128
ny = 128
xmax = 1.0
ymax = 1.0

xlboundary = periodic
xrboundary = periodic

ylboundary = reflect
yrboundary = outflow


[rt]
p0_base = 1.0

rho_1 = 1.0
rho_2 = 2.0

vel_amplitude = 0.25
vel_width = 0.025
